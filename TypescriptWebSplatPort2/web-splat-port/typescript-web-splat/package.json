{
  "name": "typescript-web-splat",
  "version": "0.1.0",
  "description": "3D Gaussian Splatting Viewer - TypeScript Port",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "_build": "tsc",
    "copy-shaders": "copyfiles -u 1 \"src/shaders/**/*\" dist",
    "build": "esbuild src/main.ts --bundle --format=esm --platform=browser --sourcemap --outfile=dist/js/web_splat.js && npm run copy-shaders",
    "dev": "tsc --watch",
    "serve": "http-server dist -p 8080",
    "clean": "rm -rf dist"
  },
  "authors": [
    "Simon Niedermayr",
    "Josef Stumpfegger"
  ],
  "dependencies": {
    "fflate": "^0.8.2",
    "gl-matrix": "^3.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@webgpu/types": "^0.1.44",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.25.9",
    "http-server": "^14.1.1",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "3d",
    "gaussian",
    "splatting",
    "webgpu",
    "typescript"
  ],
  "license": "MIT"
}
